import pygame, sys pygame.init() scr = pygame.display.set_mode((800,500)) pygame.display.set_caption("Desert Expedition")
BLACK,WHITE,GRAY = (0,0,0),(255,255,255),(40,40,40) BLUE,YELLOW,GREEN = (80,170,255),(255,220,80),(0,220,160) fT = pygame.font.SysFont("Consolas",28,bold=True) fD = pygame.font.SysFont("Consolas",18) fP = pygame.font.SysFont("Consolas",15,italic=True)
dialogues = [ ("Guide","The desert is endless, but every dune hides a story."), ("Player","I need to reach the Sun Temple. Any direction?"), ("Guide","Follow the dunes that curve like waves — they always point east."), ("Player","What dangers should I expect?"), ("Guide","Sandstorms hide ancient machines still alive under the sand."), ("Guide","Take this compass — if it spins, you're close.") ]
box = pygame.Rect(50,330,700,140) i=0
def show(s,t): scr.fill(BLACK) scr.blit(fT.render("Desert Outpost Camp",True,YELLOW),(240,30)) pygame.draw.rect(scr,GRAY,box,border_radius=10) pygame.draw.rect(scr,WHITE,box,2,border_radius=10) scr.blit(fT.render(s,True,BLUE if s=="Player" else GREEN),(70,350)) scr.blit(fD.render(t,True,WHITE),(70,390)) scr.blit(fP.render("Press SPACE...",True,(180,180,180)),(600,470)) pygame.display.flip()
r=True while r: for e in pygame.event.get(): if e.type==pygame.QUIT: r=False if e.type==pygame.KEYDOWN and e.key in (pygame.K_SPACE,pygame.K_RETURN): i+=1; r = i<len(dialogues) if r: show(*dialogues[i])
pygame.quit(); sys.exit()
